{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 50000000
  },
  "output": {
    "filePath": "repomix-output.xml",
    "style": "xml",
    "compress": true,
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "git": {
      "sortByChanges": true,
      "includeDiffs": false,
      "includeLogs": false,
      "includeLogsCount": 25
    }
  },
  "include": [
    "src/**",
    "public/**/*.svg",
    "components.json",
    "next.config.ts",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "tsconfig.json",
    "package.json",
    "README.md"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": []
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
